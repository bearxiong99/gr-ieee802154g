INCLUDE(FindPkgConfig)
PKG_CHECK_MODULES(PC_IEEE802154G ieee802154g)

FIND_PATH(
    IEEE802154G_INCLUDE_DIRS
    NAMES ieee802154g/api.h
    HINTS $ENV{IEEE802154G_DIR}/include
        ${PC_IEEE802154G_INCLUDEDIR}
    PATHS ${CMAKE_INSTALL_PREEFIX}/include
          /usr/local/include
          /usr/include
)

FIND_LIBRARY(
    IEEE802154G_LIBRARIES
    NAMES gnuradio-ieee802154g
    HINTS $ENV{IEEE802154G_DIR}/lib
        ${PC_IEEE802154G_LIBDIR}
    PATHS ${CMAKE_INSTALL_PREFIX}/lib
          ${CMAKE_INSTALL_PREFIX}/lib64
          /usr/local/lib
          /usr/local/lib64
          /usr/lib
          /usr/lib64
)

INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(IEEE802154G DEFAULT_MSG IEEE802154G_LIBRARIES IEEE802154G_INCLUDE_DIRS)
MARK_AS_ADVANCED(IEEE802154G_LIBRARIES IEEE802154G_INCLUDE_DIRS)

